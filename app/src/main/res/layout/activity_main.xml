<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTextVies"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <TextView
            android:layout_weight="1"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="viewEnd"
            android:paddingTop="13pt"
            android:paddingBottom="5pt"
            android:textSize="37pt"
            android:textStyle="bold"
            android:paddingRight="5pt"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:background="@color/colorTextVies"/>
    <TableLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:layout_marginBottom="2pt">
            <Button
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:text="Ac"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/buAC"
                    android:textSize="14pt"
                    android:background="@color/gray"/>
            <Button
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:text="+/-"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/buPlusMinsu"
                    android:textSize="14pt"
                    android:onClick="buNumberEvent"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:layout_marginRight="2pt"
                    android:text="%"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/buPersent"
                    android:textSize="14pt"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="/"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/buDiv"
                    android:textSize="14pt"
                    android:background="@color/columColor" android:textColor="@android:color/background_light"
                    android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2pt">
            <Button
                    android:layout_weight="1"
                    android:layout_marginRight="2pt"
                    android:text="7"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu7"
                    android:textSize="14pt"
                    android:onClick="buNumberEvent"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:layout_marginRight="2pt"
                    android:text="8"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu8"
                    android:textSize="14pt"
                    android:onClick="buNumberEvent"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="9"
                    android:layout_marginRight="2pt"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu9"
                    android:textSize="14pt"
                    android:onClick="buNumberEvent"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="*"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/buMulti"
                    android:textSize="14pt"
                    android:background="@color/columColor"
                    android:textColor="@android:color/background_light" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2pt">
            <Button
                    android:layout_weight="1"
                    android:text="4"
                    android:layout_marginRight="2pt"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu4"
                    android:textSize="14pt"
                    android:onClick="buNumberEvent"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="5"
                    android:layout_marginRight="2pt"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu5"
                    android:onClick="buNumberEvent"
                    android:textSize="14pt"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="6"
                    android:layout_marginRight="2pt"
                    android:layout_width="47pt"
                    android:onClick="buNumberEvent"
                    android:layout_height="47pt"
                    android:id="@+id/bu6"
                    android:textSize="14pt"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="-"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/buMinus"
                    android:textSize="14pt"
                    android:background="@color/columColor"
                    android:textColor="@android:color/background_light"
                    android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2pt">
            <Button
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:text="1"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu1"
                    android:textSize="14pt"
                    android:onClick="buNumberEvent"
                    android:background="@color/gray"/>
            <Button
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:text="2"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu2"
                    android:textSize="14pt"
                    android:onClick="buNumberEvent"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="3"
                    android:layout_marginRight="2pt"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/bu3"
                    android:onClick="buNumberEvent"
                    android:textSize="14pt"
                    android:background="@color/gray"/>
            <Button
                    android:layout_weight="1"
                    android:text="+"
                    android:layout_width="47pt"
                    android:layout_height="47pt"
                    android:id="@+id/buPuls"
                    android:textSize="14pt"
                    android:background="@color/columColor"
                    android:textColor="@android:color/background_light"
                    android:onClick="buOpEvent"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:text="0"
                android:layout_width="92pt"
                android:layout_height="47pt"
                android:id="@+id/bu0"
                android:textSize="14pt"
                android:background="@color/gray" android:textAlignment="textStart" android:paddingLeft="10pt"
                android:onClick="buNumberEvent"/>
        <Button
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:text="."
                android:layout_width="47pt"
                android:layout_height="47pt"
                android:id="@+id/buDot"
                android:onClick="buNumberEvent"
                android:textSize="14pt"
                android:background="@color/gray"/>
        <Button
                android:text="="
                android:layout_weight="1"
                android:layout_width="47pt"
                android:layout_height="47pt"
                android:id="@+id/buEquil"
                android:textSize="14pt"
                android:background="@color/columColor"
                android:textColor="@android:color/background_light" android:onClick="buEquelEvent"/>
    </LinearLayout>
</LinearLayout>